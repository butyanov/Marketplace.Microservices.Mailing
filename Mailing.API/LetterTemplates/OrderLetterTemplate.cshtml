@using Newtonsoft.Json
@model dynamic 
@{
    var modelOrder = JsonConvert.DeserializeObject<dynamic>(Model["Order"].ToString());
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.6;
            color: #333;
            background-color: #f7f7f7;
        }

        h1, h3 {
            font-size: 28px;
            font-weight: bold;
            margin-top: 0;
        }
    </style>
</head>
<body>
<h1>@Model["Subject"]</h1>
<p>@Model["Info"]</p>

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    </thead>
    <tbody>
    
    @foreach(var product in modelOrder)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Quantity</td>
        </tr>
    }
    </tbody>
</table>
<p>@Model["TotalPrice"]</p>
</body>
</html>